{
  "name": "blink-nwc",
  "version": "1.0.0",
  "description": "Nostr Wallet Connect GraphQL subgraph",
  "scripts": {
    "start": "node -r ./lib/src/services/tracing.js ./lib/src/server/subgraph.js",
    "build": "tsc && tscpaths -p tsconfig.json -s . -o ./lib",
    "dev": "tsnd --respawn --files -r tsconfig-paths/register -r src/services/tracing.ts src/server/subgraph.ts",
    "eslint-check": "eslint \"{src,test}/**/*.ts\"",
    "eslint-fix": "eslint \"{src,test}/**/*.ts\" --fix",
    "tsc-check": "tsc --noEmit",
    "unit": "LOGLEVEL=warn jest --config ./test/unit/jest.config.js --bail --runInBand --verbose $TEST",
    "integration": "LOGLEVEL=warn jest --config ./test/integration/jest.config.js --bail --runInBand --verbose $TEST",
    "check-sdl": "pnpm generate-gql-types && if git diff --name-only | grep -q 'src/graphql/__generated__'; then echo 'Error: src/graphql/schema.graphql has changes, run \\`pnpm generate-gql-types\\` and re-recommit' >&2; exit 1; fi",
    "generate-gql-types": "graphql-codegen --config codegen.yml",
    "generate-supergraph": "rover supergraph compose --config dev/apollo-federation/supergraph-config.yaml --elv2-license accept --output dev/apollo-federation/supergraph.graphql"
  },
  "devDependencies": {
    "@apollo/rover": "^0.17.3",
    "@graphql-codegen/cli": "^5.0.0",
    "@graphql-codegen/typescript": "^4.0.1",
    "@graphql-codegen/typescript-operations": "^4.0.1",
    "@graphql-codegen/typescript-resolvers": "^4.0.1",
    "@swc/core": "^1.3.107",
    "@swc/jest": "^0.2.29",
    "@types/eslint": "^9.6.1",
    "@types/express": "^4.17.21",
    "@types/node": "^20.4.8",
    "@types/jest": "^29.5.14",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-prettier": "^5.5.1",
    "jest": "^29.7.0",
    "jest_workaround": "^0.79.19",
    "nodemon": "^3.0.1",
    "pino-pretty": "^10.2.0",
    "prettier": "^3.0.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsc-watch": "^6.0.4",
    "tsconfig-paths": "^4.2.0",
    "tscpaths": "^0.0.9",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "@apollo/server": "^4.9.1",
    "@apollo/subgraph": "^2.5.1",
    "@opentelemetry/api": "1.9.0",
    "@opentelemetry/core": "1.26.0",
    "@opentelemetry/exporter-trace-otlp-http": "0.53.0",
    "@opentelemetry/instrumentation": "0.53.0",
    "@opentelemetry/instrumentation-graphql": "0.43.0",
    "@opentelemetry/instrumentation-grpc": "0.53.0",
    "@opentelemetry/instrumentation-http": "0.53.0",
    "@opentelemetry/instrumentation-net": "0.39.0",
    "@opentelemetry/resources": "1.26.0",
    "@opentelemetry/sdk-trace-base": "1.26.0",
    "@opentelemetry/sdk-trace-node": "1.26.0",
    "@opentelemetry/semantic-conventions": "1.27.0",
    "@t3-oss/env-core": "^0.7.3",
    "apollo-server-core": "^3.12.0",
    "apollo-server-errors": "^3.3.1",
    "apollo-server-express": "^3.12.0",
    "express": "^4.18.2",
    "graphql": "^16.7.1",
    "graphql-tag": "^2.12.6",
    "helmet": "^7.0.0",
    "pino": "^8.14.2",
    "pino-http": "^8.3.3",
    "zod": "^3.25.67"
  }
}
